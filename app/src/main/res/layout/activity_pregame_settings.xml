<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:background="@drawable/dice_logo"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/pregameDescriptionView"
        android:background="#00CC99"
        android:text="Enter the names of the players"
        android:textSize="20sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:background="#AACC55"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:background="#00CC99"
            android:text="How many players:"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Spinner
            android:id="@+id/numberOfPlayersSpinner"
            android:entries="@array/number_of_players"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:background="#EEAAAAAA"
        android:gravity="left|bottom"
        android:text="Player 1 name:"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <EditText
        android:id="@+id/playerOneNamingField"
        android:background="#EECCCCCC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:background="#EEAAAAAA"
        android:text="Player 2 name:"
        android:textSize="30sp"
        android:gravity="left|bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1" />
    <EditText
        android:id="@+id/playerTwoNamingField"
        android:background="#EECCCCCC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/pregameStartButton"
        android:background="@drawable/button_shape1"
        android:text="Start game!"
        android:textSize="35sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/pregameBackButton"
        android:src="@drawable/back_button"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:scaleType="centerInside"
        android:layout_width="50dp"
        android:layout_height="0dp" />

</LinearLayout>